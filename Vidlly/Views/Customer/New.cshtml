@model Vidlly.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Customer.Name)
        @Html.TextBoxFor(a => a.Customer.Name, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Customer.Birthday)
        @Html.TextBoxFor(a => a.Customer.Birthday, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Customer.Birthday)
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Customer.MembershipTypeId)
        @Html.DropDownListFor(a => a.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type",  new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(a => a.Customer.IsSubscribedToNewsletter) Subscribed to NewsLetter?
        </label>
    </div>
    @Html.HiddenFor(m => m.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}