@model Vidlly.ViewModels.NewMovieViewModel

@{
    ViewBag.Title = "NewMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Create", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Movies.Name)
        @Html.TextBoxFor(a => a.Movies.Name, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Movies.NumberInStock)
        @Html.TextBoxFor(a => a.Movies.NumberInStock, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.Movies.ReleasedDate)
        @Html.TextBoxFor(a => a.Movies.ReleasedDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Movies.Genre)
        @Html.DropDownListFor(a => a.Movies.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select The Genre", new { @class = "form-control" })
    </div>


}

